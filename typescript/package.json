{
  "name": "@ideamans/libnextimage",
  "version": "0.4.0",
  "description": "TypeScript/Node.js bindings for libnextimage - high-performance WebP and AVIF image processing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node --test dist/test/*.test.js",
    "test:watch": "npm run build && node --test --watch dist/test/*.test.js",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "webp",
    "avif",
    "image",
    "encoding",
    "decoding",
    "ffi",
    "image-processing"
  ],
  "author": "Ideamans",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/ideamans/libnextimage.git",
    "directory": "typescript"
  },
  "dependencies": {
    "koffi": "^2.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "scripts",
    "library-version.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
